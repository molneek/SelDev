<?xml version="1.0" encoding="UTF-8" ?>
<config>
    <modules>
        <Spet_Grid>
            <version>1.0.0</version>
        </Spet_Grid>
    </modules>
    <adminhtml>
        <events>
            <core_block_abstract_to_html_before>
                <observers>
                    <spet_grid_core_block_abstract_to_html_before>
                        <class>Spet_Grid_Model_Observer</class>
                        <method>coreBlockAbstractToHtmlBefore</method>
                    </spet_grid_core_block_abstract_to_html_before>
                </observers>
            </core_block_abstract_to_html_before>
            <sales_order_grid_collection_load_before>
                <observers>
                    <spet_grid_sales_order_grid_collection_load_before>
                        <class>Spet_Grid_Model_Observer</class>
                        <method>salesOrderGridCollectionLoadBefore</method>
                    </spet_grid_sales_order_grid_collection_load_before>
                </observers>
            </sales_order_grid_collection_load_before>
        </events>
    </adminhtml>
    <global>
        <blocks>
            <spet_grid>
                <class>Spet_Grid_Block</class>
            </spet_grid>
        </blocks>

        <resources>
            <spet_grid_setup>
                <setup>
                    <module>Spet_Grid</module>
                </setup>
            </spet_grid_setup>
        </resources>
        <helpers>
            <grid>
                <class>Spet_Grid_Helper</class>
            </grid>
        </helpers>
    </global>
</config>
